<strong><?php echo $this->escapeHtml($this->getMethod()->getTitle()) ?></strong>
<?php $info = $this->getInfo(); ?>
<?php if ($info && $additional = $info->getAdditionalInformation()): ?>
    <br/>
    <?php
        $dataHelper         = Mage::helper('icozweb_payu');
        $payUOrderId        = (isset($additional['payu_order_id'])) ? $this->escapeHtml($additional['payu_order_id']) : $dataHelper->__('Unknown');
        $payUTransactionId  = (isset($additional['payu_transaction_id'])) ? $this->escapeHtml($additional['payu_transaction_id']) : $dataHelper->__('Unknown');
        $paymentReference   = (isset($additional['cash_payment_reference'])) ? $additional['cash_payment_reference'] : '';
        $expiration         = (isset($additional['expiration'])) ? $additional['expiration'] : '';
    ?>
    <?php echo $dataHelper->__('PayU Order ID: %s', $payUOrderId); ?>
    <br/>
    <?php echo $dataHelper->__('PayU Transaction ID: %s', $payUTransactionId); ?>
    <br/>
    <?php echo $dataHelper->__('Payment Reference: %s', $paymentReference); ?>
    <br/>
    <?php if (!empty($expiration)): ?>
    <?php echo $dataHelper->__('Expiration: %s', $expiration); ?>
    <br/>
    <?php endif; ?>
    <?php if (isset($additional['cash_payment_receipt_html']) && $additional['cash_payment_receipt_html'] != ''): ?>
    <a href="<?php echo $additional['cash_payment_receipt_html']; ?>" target="_blank" style="cursor: pointer;color: #ffffff;font-size: 20px;background: #A6C307;padding: 10px 20px 10px 20px;text-decoration: none;margin: 10px 0px 0px 0px;display: block;text-align: center;width: 165px;"><?php echo $dataHelper->__('Show Payment'); ?></a>
    <?php else: ?>
    <?php echo $dataHelper->__('There was a problem retrieving the payment'); ?>
    <?php endif; ?>
    <br/>
<?php endif; ?>